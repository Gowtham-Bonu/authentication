<% if logged_in? %>
  <h1>Hello <%= current_user.username %> welcome to the site !</h1>
  <%= button_to "Log out", logout_users_path, method: :delete, class: "btn btn-danger" %>
<% else %>
  <h1>Welcome home!</h1>
  <div class="btn btn-info"><%= link_to "Log in", login_users_path, class: "btn btn-info" %></div>
<% end %>